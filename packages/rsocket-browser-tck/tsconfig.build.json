{
  "compilerOptions": {
    "module": "none",
    "target": "esnext",
    "sourceMap": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "types": ["mocha"],
    "declaration": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "outDir": "./dist"
  },

  "exclude": [
    "node_modules",
    "dist",
    "**/__tests__"
  ],

  "include": [
    "src/**/*"
  ]
}
